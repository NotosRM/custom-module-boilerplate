{
    "compilerOptions": {
        "incremental": true,
        "baseUrl": "src/.",
        "target": "es2015",
        "module": "commonjs",
        "lib": ["es2015", "dom"],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
		"allowJs": true
    },
	"include": ["src/*"],
	"exclude": ["dist/*", "node_modules"]
}
